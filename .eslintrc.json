{
    "env": {
        "browser": true,
        "es2021": true,
        "node":true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "no-console": ["error"],
        "linebreak-style": ["error", "windows"],
        "no-extra-semi":"error",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "indent" : ["error",2],
        "space-before-blocks": ["error"]
    }
}